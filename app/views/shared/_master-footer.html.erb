<div style="background-color: #2B4155" class="py-5">
  <div class="container container-home">
    <div class="row justify-content-center">
      <div class="col-6 col-lg-3 py-2 text-white">
        <h2>QUI NOUS SOMMES</h2>
      </div>
      <div class="col-6 col-lg-3 py-2 text-white">
        <h2>CE QUE NOUS FAISONS</h2>
          <% @albums.each do |album| %>
            <%= link_to album.cart_path, target:"_blank" do  %>
              <p class=""><%= album.title %></p>
            <% end %>
          <% end %>
      </div>
      <div class="col-6 col-lg-3 py-2 text-white">
        <h2>NOUS SUIVRE</h2>
      </div>
      <div class="col-6 col-lg-3 py-2 text-white">
        <h2>DES NOUVELLES?</h2>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Email" aria-label="Email">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Dites m'en plus!</button>
        </form>
      </div>
    </div>
  </div>
</div>
